{
  "compilerOptions": {
    "lib": [ "DOM", "ES2018", "WebWorker", "ES2020.Promise" ],
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "types": [ "svelte", "node", "mongodb" ],
    "typeRoots": [
      "src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@components": [ "src/components" ],
      "@components/*": [ "src/components/*" ],
      "@views": [ "src/views" ],
      "@views/*": [ "src/views/*" ],
      "@svg": [ "src/components/svg" ],
      "@svg/*": [ "src/components/svg/*" ],
      "@stores": [ "src/stores" ],
      "@stores/*": [ "src/stores/*" ],
      "@config": [ "src/config" ],
      "#db": [ "src/services/db.ts" ],
      "@services": [ "src/services" ],
      "@services/*": [ "src/services/*" ],
      "@static/*": [ "static/*" ],
      "@util": [ "src/util" ],
      "@util/*": [ "src/util/*" ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/node_modules/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "static/*"
  ],
  "files": [
    "node_modules/@types",
    "types.d.ts",
    "src/types/main.d.ts"
  ]
}
